        num_v = TempData["cod_p"].ToString();
    }

}

<!DOCTYPE html>
<html lang="pt_br">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="description" content="Profsa Informática - TipSoft - Emissão de NFC-e - Cliente" />
