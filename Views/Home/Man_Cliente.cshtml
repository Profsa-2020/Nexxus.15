        TempData["raz"] = "";
        TempData["fan"] = "";
        TempData["cep"] = "";
        TempData["end"] = "";
        TempData["nro"] = "";
        TempData["com"] = "";
        TempData["bai"] = "";
        TempData["cid"] = "";
        TempData["est"] = "";
        TempData["cel"] = "";
        TempData["tel"] = "";
        TempData["ema"] = "";
        TempData["cnp"] = "";
        TempData["ies"] = "";
