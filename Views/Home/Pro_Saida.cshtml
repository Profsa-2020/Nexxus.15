<script>
    $(document).ready(function () {

        $(window).scroll(function () {
            if ($(this).scrollTop() > 100) {
                $(".subir").fadeIn(500);
            } else {
                $(".subir").fadeOut(250);
            }
        });

        $(".subir").click(function () {
            $topo = $("#box00").offset().top;
            $('html, body').animate({
                scrollTop: $topo
            }, 1500);
        });

    });
</script>

