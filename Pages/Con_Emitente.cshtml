@page
@using System.Data;
@model Nexxus15.Pages.Con_EmitenteModel
@{ var dados = TempData["dad"]; }

    <!DOCTYPE html>
    <html lang="pt_br">

    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta name="description" content="Profsa Informática - TIPSOFT - Emissão de NFC-e" />
        <meta name="author" content="Paulo Rogério Souza" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <link href="https://fonts.googleapis.com/css?family=Lato:300,400" rel="stylesheet" type="text/css" />
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400" rel="stylesheet" type="text/css" />

        <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.css">

        <link rel="shortcut icon" href="img/tipsoft.ico" />

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
              integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
                integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous">
        </script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
                integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous">
        </script>

        <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

        <script type="text/javascript" language="javascript"
                src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
        <link href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />

        <link href="css/nexxus15.css" rel="stylesheet" type="text/css" media="screen" />
        <title>Emitente - TipSoft Sistemas - Emissão de NFC-e</title>
    </head>

    <script>
        $(document).ready(function () {

            $('#tab-1').DataTable({
                "pageLength": 25,
                "aaSorting": [
                    [3, 'asc']
                ],
                "language": {
                    "lengthMenu": "Demonstrar _MENU_ linhas por páginas",
                    "zeroRecords": "Não existe registros a demonstar ...",
                    "info": "Mostrada página _PAGE_ de _PAGES_",
                    "infoEmpty": "Sem registros de Emitentes ...",
                    "sSearch": "Buscar:",
                    "infoFiltered": "(Consulta de _MAX_ total de linhas)",
                    "oPaginate": {
                        sFirst: "Primeiro",
                        sLast: "Último",
                        sNext: "Próximo",
                        sPrevious: "Anterior"
                    }
                }
            });
        });
    </script>

    <body class="log-1">
        <partial name="_Header" />
        <div class="container-fluid">
            <div class="qua-2">
                <div class="row qua-3">
                    <div class="col-9 text-left">
                        <span>Consulta de Emitentes</span>
                    </div>
                    <div class="col-3 text-center">
                        <form name="frmTelNov" action="~/Man_Emitente?ope=1&cod=0" method="POST">
                            <div class="text-center">
                                <button type="submit" class="bot-2" id="nov" name="novo"
                                        title="Mostra campos para criar novo Emitente no sistema">
                                    <i class="fa fa-plus-circle fa-1g" aria-hidden="true"></i><span> Novo </span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <br />
                <div class="tab-0 table-responsive">
                    <table id="tab-1" class="table table-sm table-striped">
                        <thead>
                            <tr>
                                <th width="10%">Alterar</th>
                                <th width="10%">Excluir</th>
                                <th>Chave</th>
                                <th>Razão Social</th>
                                <th>Tipo</th>
                                <th>Cidade</th>
                                <th>UF</th>
                                <th>C.n.p.j.</th>
                                <th>I.E.</th>
                                <th>Celular</th>
                                <th>EMail</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ if (dados != null)
                                {
                                    foreach (DataRow linha in ((System.Data.DataTable)dados).Rows)
                                    {
                                        <tr>
                                            <td class="cor-1"><a href="~/Man_Emitente?ope=2&cod=@linha["Pk"].ToString()" title="Efetua alteração do registro aa linha"><i class="fa fa-pencil-square" aria-hidden="true"></i> Editar</a></td>
                                            <td class="cor-2"><a href="~/Man_Emitente?ope=3&cod=@linha["Pk"].ToString()" title="Efetua eliminação do registro da linha"><i class="fa fa-recycle" aria-hidden="true"></i> Eliminar</a></td>
                                            <td>@linha["Pk"].ToString()</td>
                                            <td>@linha["RazaoSocial"].ToString()</td>
                                            <td>@linha["Tipo"].ToString()</td>
                                            <td>@linha["Cidade"].ToString()</td>
                                            <td class="text-center">@linha["Estado"].ToString()</td>
                                            <td>@linha["Inscricao"].ToString()</td>
                                            <td>@linha["InscricaoEstadual"].ToString()</td>
                                            <td>@linha["Celular"].ToString()</td>
                                            <td>@linha["Email"].ToString()</td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <br />
            </div>
        </div>
    </body>

</html>
